

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div class="single new">
            <h3 class="side-title">Authors</h3>

              <table class="table table-hover">
                <tr>
                  <th>Author Name</th>
                  <th> Actions</th>
                </tr>
                <% @authors.each do |author|%>
                  <tr>
                    <td><%= author.name%></td>
                    <td><%= link_to 'Edit',edit_author_path(author.id)%> | <%= link_to 'Delete',author_path(author), method: :delete,data: {confirm: 'Are you sure delete?'}%></td>
                  </tr>
                <% end %>
              </table>

            </div>
    </div>
</div>
