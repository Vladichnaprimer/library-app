<div class="row">
    <div class="col-md-12">
        <div class="single">
            <h3 class="side-title"><%= @book.name%></h3>
            <h5><i>
                    by <% @book.authors.each do |a|%>
                        <%= a.name%>
                    <%end%>
                </i>
            </h5>
                <div class="books-show-left">
                   <%= image_tag(@book.image_url, heigth: '200', width: '100')if @book.image_url.presence %>
                </div>
                <div class="books-show-right">
                  <h3 class="side-title">Book Info<h3>
                      <br>
                    <table class="table table-hover" style= 'font-size: 14px' >
                        <tr>
                            <td> <strong>Category:</strong> </td>
                            <td><%= @book.category.name if @book.category %></td>
                        </tr>
                        <tr>
                            <td> <strong>Publisher</strong> :</td>
                            <td><%= @book.publisher%></td>
                        </tr>
                        <tr>
                            <td> <strong>Format:</strong></td>
                            <td><%= @book.format%></td>
                        </tr>
                        <tr>
                            <td> <strong>Pages:</strong></td>
                            <td><%= @book.pages%></td>
                        </tr>
                        <tr>
                            <td> <strong>Year:</strong></td>
                            <td><%= @book.year%></td>
                        </tr>

                    </table>
                </div>
                <div class="books-show-bottom">
                    <div class="clearfix"></div>
                    <h3 class="side-title">description</h3>
                    <p><%= @book.description%> </p>
                </div>
                <%if user_signed_in?%>
                    <div class="books-show-bottom">
                        <h3 class="side-title">Admin Function</h3>
                        <%= link_to 'Edit',edit_book_path(@book.id)%> | <%= link_to 'Delete',book_path(@book),method: :delete, data: {confirm: 'Are you sure?'}%>
                    </div>
                <% end %>

        </div>
    </div>
</div>
