<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="single new">
      <h3 class="side-title">Sign up</h3>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>

              <div class="form-group">
                <%= f.email_field :email, class:'email', placeholder: 'Email'%><br/>
              </div>

              <div class="form-group">
                <% if @minimum_password_length %>
                  <em><%= @minimum_password_length %> characters minimum</em>
                <% end %>
                <%= f.password_field :password, class:'input password', placeholder: 'Password'%><br/>
              </div>

              <div class="form-group">

                <%= f.password_field :password_confirmation, class:'input password', placeholder: 'Confirm password'%><br/>
              </div>

              <div class="actions">
                <%= f.submit 'Sign up', class: 'btn btn-primary'%>
                <%= link_to 'Sign in', new_user_session_path, class: 'btn btn-default'%>
              </div>
            <% end %>



          </div>
    </div>
</div>
