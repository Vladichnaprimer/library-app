<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div class="single new">
            <h3 class="side-title">Categories</h3>

              <table class="table table-hover">
                <tr>
                  <th>Category Name</th>
                  <th> Actions</th>
                </tr>
                <% @categories.each do |category|%>
                  <tr>
                    <td><%= category.name%></td>
                    <td><%= link_to 'Edit',edit_category_path(category.id)%> | <%= link_to 'Delete',category_path(category), method: :delete,data: {confirm: 'Are you sure delete?'}%></td>
                  </tr>
                <% end %>
              </table>

            </div>
    </div>
</div>
